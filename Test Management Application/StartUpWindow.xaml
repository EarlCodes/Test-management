        </Rectangle>
        <Label x:Name="label1" Content="Made For Student and lectureres
               " Foreground="#f03a47" HorizontalAlignment="Left" Margin="62,222.285,0,0" VerticalAlignment="Top" FontFamily="Yu Gothic Light" Width="211.32" Height="31.552"/>
        <Rectangle HorizontalAlignment="Left" Height="162" Margin="107,293,0,0" VerticalAlignment="Top" Width="155">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Resources/lecture (1).png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="162" Margin="131,285,0,0" VerticalAlignment="Top" Width="154" Grid.Column="1">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Resources/Learning.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="label1_Copy" Content="Lecturer" Foreground="#f03a47" HorizontalAlignment="Left" Margin="139,467,0,0" VerticalAlignment="Top" FontFamily="Yu Gothic Light" Width="99" Height="40" FontSize="20"/>
        <Label x:Name="label1_Copy1" Content="Student
" Foreground="#f03a47" HorizontalAlignment="Left" Margin="168,467,0,0" VerticalAlignment="Top" FontFamily="Yu Gothic Light" Width="90" Height="36" Grid.Column="1" FontSize="20"/>
        <Border BorderBrush="Black" BorderThickness="2" Margin="23,526,29,199" CornerRadius="10,10,10,10">
            <StackPanel Orientation="Vertical" >
                <Label Content="Create Test" HorizontalAlignment="Left" FontSize="14" Foreground="#f03a47" Margin="10,20,0,0" FontFamily="Yu Gothic UI Light"/>
                <Label Content="View Student Marks" FontSize="14" Foreground="#f03a47" Margin="10,5,0,0" FontFamily="Yu Gothic UI Light"/>
                <Label Content="View Student Marks" FontSize="14" Foreground="#f03a47" Margin="10,5,0,0" FontFamily="Yu Gothic UI Light"/>
            </StackPanel>
        </Border>
        <Border BorderBrush="Black" BorderThickness="2" Margin="42.929,526,12.929,199" CornerRadius="10,10,10,10" Grid.Column="1">
            <StackPanel Orientation="Vertical" >
                <Label Content="Take Test" HorizontalAlignment="Left" FontSize="14" Foreground="#f03a47" Margin="10,20,0,0" FontFamily="Yu Gothic UI Light"/>
                <Label Content="View Marks" FontSize="14" Foreground="#f03a47" Margin="10,5,0,0" FontFamily="Yu Gothic UI Light"/>
                <Label Content="View Memorandum" FontSize="14" Foreground="#f03a47" Margin="10,5,0,0" FontFamily="Yu Gothic UI Light"/>
            </StackPanel>
        </Border>

    </Grid>
