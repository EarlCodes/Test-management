        <Button x:Name="btnStudent" Margin="32,752,10,57" Click="BtnStudent_Click" Background="#FF4040C1" Grid.Column="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="338">
                <Label Content="More" FontSize="24"  Margin="10,0,0,0" FontFamily="Yu Gothic Light" Foreground="#f03a47"/>
                <Image Source="Resources/expand-button.png" Margin="200,0,0,0"/>
            </StackPanel>
        </Button>
        <Label x:Name="label" Content="Welcome To Multiple-Choice  Test  Management Application " Foreground="#f03a47" HorizontalAlignment="Left" Margin="60,187.385,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.14,-0.724" FontSize="24" Width="633" FontFamily="Yu Gothic UI Semilight" Height="44.9" Grid.ColumnSpan="2"/>
        <Rectangle Margin="259,-73,258,583" Grid.ColumnSpan="2">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Resources/2754c534-ecd1-4de2-b46f-f3081938d4f9_200x200 (1).png"/>
